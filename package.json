{
  "name": "@standard-schema/spec",
  "description": "A standard interface for TypeScript schema validation libraries",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Colin McDonnell",
  "repository": {
    "type": "git",
    "url": "https://github.com/standard-schema/standard-schema"
  },
  "keywords": ["typescript", "schema", "validation", "standard", "interface"],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest --typecheck",
    "lint": "pnpm biome lint ./src",
    "format": "pnpm biome format --write ./src",
    "check": "pnpm biome check ./src",
    "build": "tsup"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
